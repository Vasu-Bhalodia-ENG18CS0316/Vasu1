#include<stdio.h>
int input(int *a,int *b)  
{
    printf("Enter the values of a and b : \n");
    scanf("%d %d",a,b);
}
int swap(int a,int b)
{
    printf("Before swapping a = %d and b = %d",a,b);
    a=a+b;                   
    b=a-b;
    a=a-b;
    printf("\nAfter swapping a = %d and b = %d",a,b);
}
int main()
{
    int a,b; 
    input(&a,&b);
    swap(a,b);
}
